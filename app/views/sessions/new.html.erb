<h1>ログインページ</h1>
<div>
  <div>
    <%= form_with(url: login_path, scope: :session) do |f| %>
      <div>
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email %>
      </div>
      
      <div>
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
      </div>
      <%= f.submit 'ログイン' %>
    <% end %>
    
    <p><%= link_to '新規登録',signup_path  %></p>
  </div>
</div>